{
  "name": "xrm-fx",
  "version": "1.0.0",
  "description": "Typescript Xrm Javascript framework",
  "main": "index.js",
  "scripts": {
    "build": "tsc && webpack -d",
    "build-webpack": "webpack -d",
    "test": "jest"
  },
  "directories": {
    "src": "src",
    "test": "test"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/",
    "testMatch": [
      "**/test/**/*.+(ts)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".d.ts",
      "/dist/",
      "/dist.browser/",
      "/src/"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "xrm-mock": "^3.4.17"
  },
  "dependencies": {
    "@types/xrm": "^9.0.20",
    "awesome-typescript-loader": "^5.2.1",
    "fakexrmeasy": "^1.0.9",
    "jest-cli": "^25.1.0"
  }
}
